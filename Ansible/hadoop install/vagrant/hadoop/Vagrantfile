Vagrant.configure("2") do |config|
  config.disksize.size = '30GB'
  config.vm.define "node1" do |vb|
      config.vm.provider "virtualbox" do |v|
      v.memory = 4096
      v.cpus = 2
    end
  vb.vm.host_name = "node1"
  vb.vm.network "private_network", ip: "192.168.33.21"
  vb.vm.box = "centos/72"
  end

